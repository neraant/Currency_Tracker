{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "types": ["jest", "@testing-library/jest-dom"],
    "paths": {
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@pages/*": ["pages/*"],
      "@typings/*": ["types/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@patterns/*": ["patterns/*"],
      "@data/*": ["data/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "src/types/env.d.ts", "jest.setup.ts"]
}
